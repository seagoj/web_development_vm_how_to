server {
    listen      80;
    server_name honeymoon.jonathan-hanson.local honeymoon.jonathan-hanson.org;

    charset off;

    access_log  /var/log/nginx/honeymoon.access.log;
    error_log   /var/log/nginx/honeymoon.error.log;

    location / {
        root /var/www/honeymoon;
        index index.html;
    }

    #error_page  404              /404.html;

    # redirect server error pages to the static page /50x.html
    #
    #error_page   500 502 503 504  /50x.html;
    #location = /50x.html {
    #    root              /var/www/groundhog/www;
    #}

    # Images and static content is treated different
    #
    location ~* ^.+\.(jpg|jpeg|gif|css|png|js|ico|xml)$ {
        root              /var/www/honeymoon;
        access_log        off;
        expires           30d;
    }
}
